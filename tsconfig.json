{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": false
  },
  "include": ["src", "**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "**/*.spec.js", "**/*.test.js"]
}